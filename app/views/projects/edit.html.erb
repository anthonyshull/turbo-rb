<%= turbo_frame_tag 'project' do %>
  <%= form_with(model: @project) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="actions">
      <%= form.submit %>
      <%= link_to 'Cancel', @project %>
    </div>
  <% end %>
<% end %>
