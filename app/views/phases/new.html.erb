<%= turbo_frame_tag 'phase' do %>
  <%= form_with(model: [@phase.project, @phase]) do |form| %>
    <div class='field'>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class='field'>
      <%= form.label :start_date %>
      <%= form.date_select :start_date %>
    </div>
    <div class='field'>
      <%= form.label :end_date %>
      <%= form.date_select :end_date %>
    </div>

    <div class='actions'>
      <%= form.submit %>
      <%= link_to 'Cancel', @phase.project %>
    </div>
  <% end %>
<% end %>
